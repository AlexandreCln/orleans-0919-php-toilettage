         <form method="post" action="/Home/send#contact" class="form-home-page">
            <div class="form-row">
                <div class="form-group col-md-6 col-12">
                    <label for="lastname">Nom</label>
                    <input type="text" name="lastname" class="form-control" id="lastname" placeholder="Doe">
                    <ul class="alert alert-danger">
                        {%- for error in errors.lastname %}
                        <li>{{ error }}</li>
                        {% endfor -%}
                    </ul>

                </div>
                <div class="form-group col-md-6 col-12">
                    <label for="firstname">Pr√©nom</label>
                    <input type="text" name="firstname" class="form-control" id="firstname" placeholder="John">
                    <ul class="alert alert-danger">
                        {%- for error in errors.firstname %}
                            <li>{{ error }}</li>
                        {% endfor -%}
                    </ul>

                </div>
            </div>
            <div class="form-group">
                <label for="mail">Adresse mail</label>
                <input type="email" name="mail" class="form-control" id="mail" placeholder="name@example.com">
                <ul class="alert alert-danger">
                    {%- for error in errors.mail %}
                        <li>{{ error }}</li>
                    {% endfor -%}
                </ul>

            </div>
            <div class="form-group">
                <label for="subject"></label>
                <select class="form-control" name="subject" id="subject">
                    <option>Selectionnez une option</option>
                    <option>Information</option>
                    <option>Prendre un rendez-vous</option>
                </select>
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea class="form-control" name="message" id="message" rows="6"></textarea>
                <ul class="alert alert-danger">
                    {%- for error in errors.message %}
                        <li>{{ error }}</li>
                    {% endfor -%}
                </ul>

            </div>
            <div>
                <img src="/assets/images/dog-paw.png" alt="dog-paw" class="dog-paw">
                <button type="submit" class="btn btn-primary">Envoyer</button>
                <img src="/assets/images/dog-paw.png" alt="dog-paw" class="dog-paw">
            </div>
        </form>
        </section>

