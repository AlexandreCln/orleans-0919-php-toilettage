{% extends 'layoutAdmin.html.twig' %}

{% block title %}Toilettage Seduction{% endblock %}

{% block content %}

    {% block stylesheet %}
        <link rel="stylesheet" href="/assets/css/style_race.css">
    {% endblock %}

    <section class="category_admin">
        <h1>Page Administrateur</h1>
        <div class="row categoryList">
            <div class="col-lg-3">
                <h2>Liste des catégories</h2>
            </div>
        </div>
        <div class="row">
            {% for category in categories %}
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ category.name }}</h5>
                            <a  href="/category/delete/{{ category.id }}"><input class="btn btn-primary" type="button" value="suppprimé" onclick="alert('Catégorie supprimée')"></a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div>Rien à afficher</div>
            {% endfor %}
        </div>
    </section>

{% endblock %}